 \n        data() {\n          return {\n            question : undefined, \n            incorrects : undefined,\n            correct : undefined,\n            chosen : undefined,\n            submited : false,\n          }\n        },\n        methods :{\n          submit(){\n            if (!this.chosen) {\n              alert('No answer chosen ')\n            } else {\n              this.submited = true\n              if (this.chosen == this.correct) {\n                console.log('All rigth')\n              }else{\n                console.log('wrond !')\n              }\n            }\n          }\n        }\n        ,\n\n        computed:{\n          answers(){\n            var answers = JSON.parse(JSON.stringify(this.incorrects))  ;\n            answers.splice(Math.round(Math.random()*answers.length),0,this.correct)\n\n            return answers\n          } \n        },\n\n        \n      \n        created(){\n          this.axios\n          .get(\"https://opentdb.com/api.php?amount=1&category=18\")\n          .then((response) => {\n            this.question = response.data.results[0].question\n            this.correct= response.data.results[0].correct_answer\n            this.incorrects = response.data.results[0].incorrect_answers\n            });\n        \n        },\n        \n      }   \n\n</script>\n\n<style lang=\"scss\">\n  #app {\n    font-family: Avenir, Helvetica, Arial, sans-serif;\n    -webkit-font-smoothing: antialiased;\n    -moz-osx-font-smoothing: grayscale;\n    text-align: center;\n    color: #2c3e50;\n    margin: 60px auto;\n    max-width: 960px;\n\n    input[type=radio]{\n      margin: 12px 14px ;\n      min-width: 20%;\n    }\n    .flex{\n      display: flex;\n\n      \n    }\n    button.send{\n      margin-top: 12px;\n      height: 40px;\n      min-width: 120px;\n      padding: 0 16px;\n      color: #fff;\n      background-color: #1867c0;\n      border: solid 1px #1867c0;\n      cursor: pointer;\n    }\n  }\n</style>\n"]},"metadata":{},